{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ShopeeDatabaseSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "EcommerceApiDb"
  },
  "ShopeeOAuth": {
    "PartnerId": "YOUR_PARTNER_ID",
    "PartnerKey": "YOUR_PARTNER_KEY",
    "RedirectUri": "https://yourdomain.com/api/account/oauth-callback"
  },
  "ShopeeApi": {
    "BaseUrl": "https://banhang.shopee.vn/",
    "TimeoutSeconds": 30,
    "Endpoints": {
      "GetProductList": "api/v3/mpsku/list/v2/get_product_list",
      "GetProductDetail": "api/v3/product/get_product_info",
      "CreateProduct": "api/v3/product/create_product_info",
      "ShopInfo": "api/framework/selleraccount/shop_info/",
      "GetProductListIsActive": "api/v3/mpsku/list/v2/search_product_list"
    }
  }
}
